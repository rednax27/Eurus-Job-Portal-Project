<% title = "Log in" %>

<div class="container mx-auto flex h-screen items-center justify-center">
    <div class="w-[30rem] rounded-lg bg-white p-8 text-center">
      <h1 class="mb-4 text-2xl font-semibold">Sign In</h1>
      <p class="pb-8 mb-4 text-gray-600">Sign in now to Access Your Dashboard</p>
      <div class="mb-4">
        <input type="text" placeholder="Company name or email" class="w-full rounded-3xl border px-3 py-2.5 text-sm outline-none focus:border-indigo-500" />
      </div>
      <div class="mb-4">
        <input type="password" placeholder="Password" class="w-full rounded-3xl border px-3 py-2.5 text-sm outline-none focus:border-indigo-500" />
      </div>
      <div class="mb-4 flex items-center justify-between">
        <label class="flex items-center">
          <input type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500" />
          <span class="ml-2 text-sm text-gray-600">Remember me</span>
        </label>
        <a href="#" class="text-sm text-indigo-600">Forgot password</a>
      </div>
      <button class="w-full rounded-full bg-gradient-to-l bg-teal-500  py-2 font-semibold text-white">Login</button>
      <p class="mt-4 text-center text-sm text-gray-600">Don't have an account? <a href="#" class="text-indigo-600">Sign up now</a></p>
    </div>
  </div>







