<div
  class="flex border-2 border-black p-4 gap-6 text-xs job-card md:w-[100%] mb-2 bg-[#fffbea]"
>
  <div class="w-[20%] flex items-start md:w-[15%]">
    <img
      src="<%= candidateProfile %>"
      alt=""
      class="border border-gray-400 p-1 object-fill rounded-full bg-white"
    />
  </div>
  <div class="flex flex-col gap-4 w-[80%] md:w-[90%]">
    <p class="text-lg font-semibold"><%= jobDone %></p>
    <div class="flex gap-4">
      <p class="font-bold"><%= jobCategory %></p>
      <p class=""><%= jobPayment %> <strong>USD</strong></p>
    </div>
    <p class=""><%= clientFeedback %></p>
    <div class="flex gap-4">
      <p class="">By <strong><%= clientName %></strong></p>
      <p class=""><%= feedbackDate %></p>
    </div>
  </div>
</div>
